{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@constants/*": ["src/constants/*"],
      "@designSystem/*": ["src/designSystem/*"],
      "@errorBoundary/*": ["src/errorBoundary/*"],
      "@errors/*": ["src/errors/*"],
      "@loading/*": ["src/loading/*"],
      "@mainProcess/*": ["src/mainProcess/*"],
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"]
}
